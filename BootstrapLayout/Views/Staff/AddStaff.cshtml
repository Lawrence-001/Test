@model StaffCreateVM
@{
    ViewData["Title"] = "Add Staff";
}

<div class="row">
    <div class="container-fluid col-sm-7 col-md-6 col-lg-5">
        <form class="form-group" method="post" asp-action="addstaff" asp-controller="staff" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="All">
            </div>
            <div>
                <label asp-for="StaffNumber"></label>
                <input asp-for="StaffNumber" class="form-control" />
            </div>
            <div>
                <label asp-for="StaffName"></label>
                <input asp-for="StaffName" class="form-control"/>
            </div>
            <div>
                <label asp-for="StaffPhoto"></label>
                <input type="file" accept=".png, .jpg, .jpeg" asp-for="StaffPhoto" class="form-control" />
            </div>
            <div>
                <label asp-for="StaffEmail"></label>
                <input asp-for="StaffEmail" class="form-control"/>
            </div>
            <div>
                <label asp-for="Department"></label>
                <select asp-for="Department" class="form-control" asp-items="@Html.GetEnumSelectList<Department>()">Select...</select>
            </div>
            <div>
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control"/>
            </div>
            <br />
            <div>
                <button type="submit" asp-action="addstaff" asp-controller="staff" class="btn btn-outline-primary"> Add Staff</button>
                
            </div>
        </form>

    </div>
</div>